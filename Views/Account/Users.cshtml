@model List<Wedding_Planner.Models.DTO.UserViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<table class="table table-bordered table-striped mt-4">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Role</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.RoleName</td>
                <td>
                    @if (user.Status == 1)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
