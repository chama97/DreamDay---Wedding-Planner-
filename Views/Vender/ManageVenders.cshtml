@model List<Wedding_Planner.Models.Entity.Vendor>

@{
    ViewData["Title"] = "Manage Vendors";
}

<h2 class="mt-4 mb-4">Vendors List</h2>

<a class="btn btn-primary mb-3" asp-action="CreateVender">+ Add New Vendor</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Vendor Name</th>
            <th>Category</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Hourly Rate</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendor in Model)
        {
            <tr>
                <td>@vendor.VendorName</td>
                <td>@vendor.Category?.Name</td>
                <td>@vendor.ContactPerson</td>
                <td>@vendor.Email</td>
                <td>@vendor.Phone</td>
                <td>@vendor.HourlyRate?.ToString("C")</td>
                <td>@(vendor.IsActive ? "Active" : "Inactive")</td>
            </tr>
        }
    </tbody>
</table>
